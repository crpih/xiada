      </content>      
      <condition>
        <target>verb_tags</target>
        <content>
          <evaluation at="anywhere">Vei30s</evaluation>
        </content>
        <condition>
          <target>enclitic_part</target>
          <content>
            <evaluation syllable_count="== 1"/>
          </content>
          <action>reject</action>
        </condition>
      </condition>
    </condition>
  </rule>
